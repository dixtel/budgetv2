{{#> base.hbs }}
{{#*inline "title"}}Details{{/inline}}
{{#*inline "body"}}
<div class="container is-max-desktop box">
  <div class="fixed-grid has-2-cols">
    <div class="grid">
      <div class="cell is-col-span-2 level">
        <div class="level-left">
          <strong>ID</strong>
        </div>
        <div class="level-right">{{entry.id}} </div>
      </div>
      <div class="cell level">
        <div class="level-left">
          <strong>Accounting date</strong>
        </div>
        <div class="level-right">{{entry.accounting_date}}</div>
      </div>
      <div class="cell level">
        <div class="level-left">
          <strong>Currency date</strong>
        </div>
        <div class="level-right">{{entry.currency_date}}</div>
      </div>
      <div class="cell level">
        <div class="level-left">
          <strong>Sender or receiver</strong>
        </div>
        <div class="level-right">{{entry.sender_or_receiver}}</div>
      </div>
      <div class="cell level">
        <div class="level-left">
          <strong>Address</strong>
        </div>
        <div class="level-right">{{entry.address}}</div>
      </div>
      <div class="cell level">
        <div class="level-left">
          <strong>Source account</strong>
        </div>
        <div class="level-right">{{entry.source_account}}</div>
      </div>
      <div class="cell level">
        <div class="level-left">
          <strong>Destination account</strong>
        </div>
        <div class="level-right">{{entry.destination_account}}</div>
      </div>
      <div class="cell level is-col-span-2">
        <div class="level-left">
          <strong>Title</strong>
        </div>
        <div class="level-right">{{entry.title}}</div>
      </div>
      <div class="cell level">
        <div class="level-left">
          <strong>Amount</strong>
        </div>
        <div class="level-right">{{nor_amt entry.amount}}</div>
      </div>
      <div class="cell level">
        <div class="level-left">
          <strong>Currency</strong>
        </div>
        <div class="level-right">{{entry.currency}}</div>
      </div>
      <div class="cell level is-col-span-2">
        <div class="level-left">
          <strong>Reference number</strong>
        </div>
        <div class="level-right">{{entry.reference_number}}</div>
      </div>
      <div class="cell level is-col-span-2">
        <div class="level-left">
          <strong>Operation type</strong>
        </div>
        <div class="level-right">{{entry.operation_type}}</div>
      </div>
      <div class="cell level is-col-span-2">
        <div class="level-left">
          <strong>Category</strong>
        </div>
        <div class="level-right">{{entry.category}}</div>
      </div>
    </div>
  </div>
</div>
{{/inline}}
{{/base.hbs}}